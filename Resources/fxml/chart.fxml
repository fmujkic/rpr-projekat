<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.projekat.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Analysis">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleChart" text="Show chart" />
                  <MenuItem mnemonicParsing="false" onAction="#handleList" text="Show list" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Actions">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAddWeight" text="Add weight" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
